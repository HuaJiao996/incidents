{
  "name": "incidents",
  "version": "0.0.1",
  "description": "Incidents management system",
  "private": true,
  "type": "module",
  "scripts": {
    "cli": "bun run --cwd scripts setup.ts",
    "services:start": "bun run --cwd scripts setup.ts start",
    "services:stop": "bun run --cwd scripts setup.ts stop",
    "services:install": "bun run --cwd scripts setup.ts install",
    "build": "bun run --cwd scripts build.ts",
    "build:core": "bun run --cwd scripts build.ts core",
    "build:api": "bun run --cwd scripts build.ts api",
    "build:web": "bun run --cwd scripts build.ts web",
    "dev": "bun run --cwd scripts dev.ts",
    "dev:core": "bun run --cwd scripts dev.ts core",
    "dev:api": "bun run --cwd scripts dev.ts api",
    "dev:web": "bun run --cwd scripts dev.ts web",
    "format": "prettier --write \"**/*.{js,ts,tsx,vue,json}\"",
    "lint": "oxlint .",
    "setup": "bun install && bun run db:generate",
    "setup:full": "bun install && bun run db:generate && bun run db:migrate && bun run db:seed",
    "init:admin": "bun run --cwd scripts init-admin.ts",
    "db:generate-auth": "cd packages/auth && bun run generate",
    "db:generate": "bun run db:generate-auth && bunx prisma generate",
    "db:migrate": "bun run db:generate-auth && bunx prisma migrate dev",
    "db:migrate:deploy": "bun run db:generate-auth && bunx prisma migrate deploy",
    "db:seed": "bunx prisma db seed",
    "db:studio": "bunx prisma studio",
    "db:reset": "bunx prisma migrate reset"
  },
  "dependencies": {
    "chalk": "^5.5.0",
    "commander": "^13.1.0",
    "cross-env": "^7.0.3"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "concurrently": "^8.2.2",
    "eslint": "^9.25.1",
    "eslint-plugin-oxlint": "^0.16.8",
    "globals": "^16.0.0",
    "oxlint": "^0.16.8",
    "prettier": "^3.5.3",
    "prismabox": "^1.1.25",
    "tsdown": "^0.12.9"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "workspaces": [
    "packages/*",
    "apps/*"
  ]
}
