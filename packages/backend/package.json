{
  "name": "@incidents/backend",
  "private": true,
  "version": "0.0.0",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"*/**/*.ts\" \"libs/**/*.ts\"",
    "start": "nest start",
    "dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/server/main",
    "lint": "eslint \"{src,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./server/test/jest-e2e.json",
    "prisma:seed": "ts-node prisma/seed.ts"
  },
  "dependencies": {
    "@fastify/static": "^8.1.1",
    "@nestjs/bullmq": "^11.0.2",
    "@nestjs/common": "^11.1.0",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.1.0",
    "@nestjs/platform-fastify": "^11.1.0",
    "@nestjs/swagger": "^11.1.5",
    "@prisma/adapter-pg": "^6.9.0",
    "@prisma/client": "^6.9.0",
    "bullmq": "^5.51.1",
    "drizzle-kit": "^0.31.0",
    "drizzle-orm": "^0.43.1",
    "fastify": "^5.3.2",
    "ioredis": "^5.6.1",
    "jexl": "^2.3.0",
    "nanoid": "^5.1.5",
    "nestjs-zod": "^4.3.1",
    "radash": "^12.1.0",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2",
    "zod": "^3.24.3"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.25.1",
    "@nestjs/cli": "^11.0.7",
    "@nestjs/schematics": "^11.0.5",
    "@nestjs/testing": "^11.1.0",
    "@swc/cli": "^0.7.3",
    "@swc/core": "^1.11.22",
    "@types/express": "^5.0.1",
    "@types/jest": "^29.5.14",
    "@types/jexl": "^2.3.4",
    "@types/node": "^22.15.3",
    "@types/supertest": "^6.0.3",
    "eslint": "^9.25.1",
    "eslint-config-prettier": "^10.1.2",
    "eslint-plugin-prettier": "^5.2.6",
    "globals": "^16.0.0",
    "jest": "^29.7.0",
    "prettier": "^3.5.3",
    "prisma": "^6.9.0",
    "source-map-support": "^0.5.21",
    "supertest": "^7.1.0",
    "ts-jest": "^29.3.2",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.31.1"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/server/",
      "<rootDir>/libs/"
    ],
    "moduleNameMapper": {
      "^@libs/api(|/.*)$": "<rootDir>/libs/api/src/$1",
      "^@libs/common(|/.*)$": "<rootDir>/libs/common/src/$1",
      "^@libs/core(|/.*)$": "<rootDir>/libs/core/src/$1",
      "^@libs/database(|/.*)$": "<rootDir>/libs/database/src/$1",
      "^@libs/redis(|/.*)$": "<rootDir>/libs/redis/src/$1"
    }
  }
}